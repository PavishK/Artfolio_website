generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String
  role      String    @default("user")
  createdAt DateTime  @default(now())
  Artwork   Artwork[]
}

model Artwork {
  id        Int      @id @default(autoincrement())
  artist    String
  category  String?
  imageUrl  String
  title     String
  createdAt DateTime @default(now())

  userId Int
  user   User @relation(fields: [userId], references: [id])
}
